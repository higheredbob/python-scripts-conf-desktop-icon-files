GRAPHITE="-fgraphite -fgraphite-identity -floop-nest-optimize"
NOFLTO="-fno-lto=4 -fno-tree-vectorize -fno-fat-lto-objects"

CFLAGS="-O2 -pipe -march=bdver2 -fno-strict-aliasing ${NOFLTO} ${GRAPHITE}"
CXXFLAGS="${CFLAGS} -fno-delete-null-pointer-checks"
FFLAGS="${CFLAGS}"
FCFLAGS="${FFLAGS}"
LDFLAGS="-Wl,--as-needed -Wl,-O1 -Wl,--hash-style=gnu -Wl,${NOFLTO} -Wl,${GRAPHITE}"

CC="gcc"
CXX="g++"
NM="gcc-nm"
RANDLIB="gcc-ranlib"
F77="gfortran"
AR="gcc-ar"
CPP="cpp"
